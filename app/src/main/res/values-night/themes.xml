<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TBank" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryVariant">@color/bg1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg2</item>
        <item name="colorSecondaryVariant">@color/main_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/titleDark</item>
        <item name="subtitleTextColor">@color/subTitleDark</item>
        <item name="hintTextColor">@color/hintDark</item>
        <item name="colorControlNormal">@color/currencyDark</item>
        <item name="colorControlHighlight">@color/iconDark</item>
        <item name="colorAccent">@color/dark_green</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/bg</item>
        <item name="colorSecondary">@color/bg2</item>
        <item name="textAppearanceBody1">@font/open_sans</item>
        <item name="textAppearanceBody2">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        ...
        <item name="android:textStyle">bold</item>
    </style>
</resources>