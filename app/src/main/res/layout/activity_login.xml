<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg1">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg1" android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                app:cardBackgroundColor="@color/bg"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login to your account"
                        android:id="@+id/text_depo2"
                        android:layout_marginTop="12dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/open_sans"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter your phone number"
                        android:id="@+id/edit_usernumber"
                        android:background="@drawable/edit_bg"
                        android:layout_below="@+id/text_depo2"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:textColorHint="@color/our_grey"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter your password"
                        android:id="@+id/edit_password"
                        android:background="@drawable/edit_bg"
                        android:layout_below="@+id/edit_usernumber"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:textColorHint="@color/our_grey"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_marginBottom="15dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Proceed"
                        android:textAlignment="center"
                        android:id="@+id/btn_login"
                        android:layout_below="@+id/edit_password"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="15dp"
                        android:textAllCaps="false"
                        android:paddingTop="6dp"
                        android:fontFamily="@font/open_sans"
                        app:backgroundTint="@color/dark_green"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>