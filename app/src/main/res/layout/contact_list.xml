<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg1">
    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" android:background="@color/bg1" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_img_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contactBadge"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/contactLbl1"
                android:layout_toRightOf="@+id/contactBadge"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/open_sans"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/contactLbl2"
                android:layout_below="@+id/contactLbl1"
                android:layout_toRightOf="@+id/contactBadge"
                android:layout_marginTop="1dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_2"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/left_img_cont"
                android:fontFamily="@font/open_sans"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="0dp"
                   android:id="@+id/left_img_cont"
                   android:src="@drawable/ic_baseline_navigate_next_24"
                   android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View
                android:id="@+id/dividerCont"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/contactLbl2"
                android:layout_toRightOf="@+id/contactBadge"
                android:background="@color/our_grey"
        />
    </RelativeLayout>
</RelativeLayout>