<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg1">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/acc_card"
            app:cardBackgroundColor="@color/bg"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_height="36dp"

                       android:layout_marginRight="0dp"
                       android:id="@+id/icon_account"
                       android:src="@mipmap/ic_launcher"
                       android:layout_alignParentRight="false" android:layout_alignParentLeft="true"
                       android:layout_marginLeft="0dp" android:layout_marginStart="0dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh. 4386"
                    android:id="@+id/accAmtLbl"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans"
                    android:layout_alignParentRight="true" android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****          ****            ****            ****"
                    android:id="@+id/accLbl"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:layout_below="@id/icon_account"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A/C NUMBER:"
                    android:id="@+id/accNoLbl"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:textSize="11sp"
                    android:layout_below="@id/accLbl"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans" android:layout_centerHorizontal="false"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37378962"
                    android:id="@+id/accNoActLbl"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/accNoLbl"
                    android:layout_below="@id/accLbl"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" android:layout_centerHorizontal="false"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERRENCE AGUSIOMA"
                    android:id="@+id/accNameLbl"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp"
                    android:layout_below="@id/accNoLbl"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans"
                    android:layout_centerHorizontal="false"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-BANK"
                    android:id="@+id/accAppLbl"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:layout_below="@id/accNoLbl"
                    android:layout_toRightOf="@id/accNameLbl"
                    android:textColor="@color/main_green"
                    android:layout_marginLeft="20dp" android:fontFamily="@font/carrois_gothic"
                    android:layout_marginRight="20dp"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="20dp" android:layout_alignParentRight="true"
                    android:gravity="end" android:textStyle="bold|italic"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlv0"
            android:layout_below="@+id/acc_card"
            android:layout_height="wrap_content"
            android:background="@color/bg1" android:gravity="center|center_horizontal">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rlvn1"
                android:layout_height="wrap_content"
                android:background="@color/bg1" android:layout_alignParentLeft="false" android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rlvn3"
                    android:layout_height="wrap_content"
                    android:background="@color/bg1" android:layout_alignParentLeft="false"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">
                <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textAlignment="center"
                        android:id="@+id/btnD"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp"
                        android:textAllCaps="false"
                        android:paddingTop="6dp"
                        android:fontFamily="@font/open_sans"
                        app:backgroundTint="@color/black"
                        android:gravity="center_horizontal" android:layout_centerHorizontal="false"
                        android:drawableLeft="@drawable/ic_plus"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rlvn"
                    android:layout_toRightOf="@+id/rlvn3"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:background="@color/bg1" android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false">
                <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Withdraw"
                        android:textAlignment="center"
                        android:id="@+id/btnW"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp"
                        android:textAllCaps="false"
                        android:paddingTop="6dp"
                        android:fontFamily="@font/open_sans"
                        app:backgroundTint="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal" android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_minus"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
                    android:id="@+id/rlv1"
                    android:layout_below="@+id/rlv0"
                    android:layout_height="wrap_content"
                    android:background="@color/bg1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT TRANSACTIONS"
                android:id="@+id/accAmtLbl1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:textSize="13sp"

                android:textColor="@color/white"
                android:layout_marginLeft="20dp" android:fontFamily="@font/open_sans"
                android:layout_alignParentRight="false" android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false" android:layout_centerVertical="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View more"
                android:textAlignment="center"
                android:id="@+id/btnViewMore"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:background="@drawable/radiusbg"
                android:textColor="@color/bg"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"
                android:paddingTop="6dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:fontFamily="@font/open_sans"
                app:backgroundTint="@color/black"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@+id/rlv1"
            android:id="@+id/accountsRV"
            android:layout_height="match_parent"/>
</RelativeLayout>