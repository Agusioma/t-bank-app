<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg1">
    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/layout_deposit1"
            android:layout_height="wrap_content"
            android:background="@color/dark_green" android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERRENCE AGUSIOMA"
                android:id="@+id/label_send"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:fontFamily="@string/default_font"
                android:textStyle="bold"
                android:layout_centerVertical="false" android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Balance:"
                android:id="@+id/label_send1"
                android:layout_below="@+id/label_send"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="@string/default_font"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="415,757,841.78 KES"
                android:layout_below="@+id/label_send"
                android:textSize="15sp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="@string/default_font"
                android:layout_alignParentRight="true"
                android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_deposit1"
            android:background="@color/bg1" android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                app:cardBackgroundColor="@color/bg2"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter the amount below"
                        android:id="@+id/text_depo"
                        android:layout_marginTop="8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@string/default_font" android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:id="@+id/edit_depo"
                        android:background="@drawable/edit_bg"
                        android:layout_below="@+id/text_depo"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:textColorHint="@color/our_grey"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@string/default_font"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textAlignment="center"
                        android:id="@+id/btn_depo"
                        android:layout_below="@+id/edit_depo"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp"
                        android:textAllCaps="false"
                        android:paddingTop="6dp"
                        android:fontFamily="@string/default_font"
                        app:backgroundTint="@color/dark_green"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>