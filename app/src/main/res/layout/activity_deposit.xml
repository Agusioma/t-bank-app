<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg1">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg1" android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                app:cardBackgroundColor="@color/bg"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terrence Agusioma"
                        android:id="@+id/text_depo"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif" android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount here"
                        android:id="@+id/edit_depo"
                        android:background="@drawable/edit_bg"
                        android:layout_below="@+id/text_depo"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColorHint="@color/our_grey"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="sans-serif"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+254702277060"
                        android:id="@+id/btn_depo"
                        android:layout_below="@+id/edit_depo"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" app:backgroundTint="@color/bg2"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>