<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg1">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/our_card"
            app:cardBackgroundColor="@color/bg"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KES"
                    android:id="@+id/text_name"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="monospace"
                    android:typeface="normal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have"
                    android:id="@+id/text_name2"
                    android:layout_below="@id/text_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000"
                    android:id="@+id/text_name3"
                    android:layout_below="@id/text_name2"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_green"
                    android:layout_marginLeft="20dp" android:fontFamily="sans-serif-medium"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="55dp"
                    android:background="@color/our_grey"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/text_name4"
                    android:layout_toEndOf="@id/divider"
                    android:layout_below="@id/text_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/divider"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/text_name5"
                    android:layout_toEndOf="@id/divider"
                    android:layout_below="@id/text_name2"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_green"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/divider"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/our_card"
            android:background="@color/our_grey"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loans"
            android:id="@+id/text_name11"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/divider3"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:typeface="normal"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/our_card2"
            android:layout_below="@+id/text_name11"
            app:cardBackgroundColor="@color/bg2"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" android:paddingTop="0dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KES"
                    android:id="@+id/text_name6"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="monospace"
                    android:typeface="normal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have"
                    android:id="@+id/text_name7"
                    android:layout_below="@id/text_name6"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp" android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000"
                    android:id="@+id/text_name8"
                    android:layout_below="@id/text_name7"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_green"
                    android:layout_marginLeft="20dp" android:fontFamily="sans-serif-medium"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="55dp"
                    android:background="@color/our_grey"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/text_name9"
                    android:layout_toEndOf="@id/divider2"
                    android:layout_below="@id/text_name6"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/divider2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/text_name10"
                    android:layout_toEndOf="@id/divider2"
                    android:layout_below="@id/text_name7"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_green"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/divider2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/our_card3"
            android:layout_below="@+id/our_card2"
            app:cardBackgroundColor="#002001"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="0dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terrence Agusioma"
                    android:id="@+id/text_name21"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:typeface="normal"
                    android:drawableRight="@drawable/ic_baseline_pending_24"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000 KES"
                    android:id="@+id/text_name23"
                    android:layout_below="@id/text_name21"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="monospace"/>
            <View
                    android:id="@+id/divider6"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="55dp"
                    android:background="#002001"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1520177747921"
                    android:id="@+id/text_name22"
                    android:layout_below="@id/text_name21"
                    android:layout_toRightOf="@id/divider6"
                    android:layout_marginTop="50dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>