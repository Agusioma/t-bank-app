<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="3dp"
            android:id="@+id/acc_card"
            app:cardBackgroundColor="@color/black"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp" android:paddingBottom="0dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_img_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statIcon"
                    android:src="@drawable/ic_list"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPOSIT"
                    android:id="@+id/transaction_label"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/statIcon"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerVertical="false"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3RYD475UI"
                    android:layout_toRightOf="@+id/statIcon"
                    android:layout_below="@id/transaction_label"
                    android:id="@+id/transaction_date"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/grey_2"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerVertical="false"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPOSIT"
                    android:id="@+id/transaction_amount"
                    android:textSize="14sp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerVertical="false" android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true" android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPOSIT"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@+id/transaction_amount"
                    android:textColor="@color/grey_2"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerVertical="false" android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true" android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" android:id="@+id/transaction_ID"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>