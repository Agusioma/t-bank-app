<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingLeft="0dp"
                android:layout_marginRight="30dp"
                android:paddingRight="0dp"
                android:layout_centerInParent="true" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
            <TextView
                    android:text="Personal details"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" android:id="@+id/regLbl" android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true" android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="30dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fNameTxtLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_user_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    android:layout_below="@id/regLbl"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/main_green"
                    android:hint="First name">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fNameEditTxt"
                        android:inputType="text"
                        android:fontFamily="@font/open_sans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/fNameTxtLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/fNameDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lNameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_user_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fNameDisc"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/main_green"
                    android:hint="Last name">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lNameEditTxt"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/lNameLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/lNameDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PhoneLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_call_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lNameDisc"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/main_green"
                    android:hint="Phone number">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEditTxt"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/PhoneLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/phoneDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/NatIDLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_user_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneDisc"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/main_green"
                    android:hint="National ID number">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/NatIDEditTxt"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/NatIDLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/NatIDDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/EmailLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NatIDDisc"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/main_green"
                    android:hint="Email address">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EmailEditTxt"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/EmailLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/EmailDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/NewPassLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_https_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/regLbl"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/main_green"
                    android:hint="Password">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/NewPassEditTxt"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/NewPassLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/NewPassDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/CNewPassLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_https_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NewPassDisc"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/main_green"
                    android:hint="Confirm Password">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CNewPassEditTxt"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/CNewPassLayout"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/CNewPassDisc"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

            <Button
                    android:id="@+id/btn_process_passwords"
                    android:layout_below="@id/CNewPassDisc"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textAllCaps="false"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans"
                    android:background="@drawable/roundbtn"
                    android:text="Proceed" android:layout_centerHorizontal="true"/>
            <ProgressBar
                    style="@android:style/Widget.Holo.Light.ProgressBar"
                    android:layout_below="@id/CNewPassLayout"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBarReg"/>
            <Button
                    android:id="@+id/btn_process_personal"
                    android:layout_below="@id/EmailDisc"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textAllCaps="false"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans"
                    android:background="@drawable/roundbtn"
                    android:text="Next" android:layout_centerHorizontal="true"/>

            <TextView
                    android:text="Password requirements"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/btn_process_passwords"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note_tt"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/pass_check"/>
            <TextView
                    android:text="1. It should contain at least 8 characters and at most 20 characters."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/reg_strength_note_tt"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note1"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
            <TextView
                    android:text="2. It should contain at least one digit."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/reg_strength_note1"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note2"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
            <TextView
                    android:text="3. It should contain at least one upper case and one lower case letter."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/reg_strength_note2"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note3"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
            <TextView
                    android:text="4. It should contain at least one special character(e.g !@#$%*()-+=^)."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/reg_strength_note3"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note4"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
            <TextView
                    android:text="5. It should not contain any space in between the characters."
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/reg_strength_note4"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_strength_note5"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_marginBottom="10dp"/>
            <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/btn_process_personal"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" android:layout_marginStart="0dp" android:layout_marginEnd="0dp">
                <TextView
                        android:text="Already have an account?"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/grey_2"
                        android:layout_height="wrap_content"
                        android:id="@+id/regLbl3" android:layout_centerVertical="true" android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"/>
                <Button
                        android:id="@+id/toSignInBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_toRightOf="@id/regLbl3"
                        android:text="Click here"
                        android:textAllCaps="false"

                        android:textStyle="bold"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                />
            </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
</ScrollView>