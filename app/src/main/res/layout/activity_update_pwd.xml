<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingLeft="0dp"
            android:layout_marginRight="30dp"
            android:paddingRight="0dp"
            android:layout_centerInParent="true">
        <TextView
                android:text="Password Update"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content" android:id="@+id/updatePwdLbl" android:layout_centerHorizontal="false"
                android:layout_alignParentTop="true" android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="Please enter the required details"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/updatePwdLbl"
                android:textColor="?attr/subtitleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/updatePwdLbl2"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="55dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneTxtLayoutPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:layout_below="@id/updatePwdLbl2"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="password_toggle"
                app:hintTextColor="?attr/hintTextColor"
                    android:hint="Current password">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/currentPwd"
                    android:inputType="textPassword"
                    android:fontFamily="@font/open_sans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/phoneTxtLayoutPwd"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:id="@+id/currentDiscPwd"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstPwdTxtLayoutPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentDiscPwd"
                android:layout_marginTop="15dp"

                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="password_toggle"
                app:hintTextColor="?attr/hintTextColor"
                android:hint="New password">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstPwd"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/firstPwdTxtLayoutPwd"
                android:textColor="@color/red"
                android:layout_height="wrap_content" android:id="@+id/firstDiscPwd"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPwdTxtLayoutPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstDiscPwd"
                android:layout_marginTop="15dp"

                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="password_toggle"
                app:hintTextColor="?attr/hintTextColor"
                android:hint="Confirm new password">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPwd"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/confirmPwdTxtLayoutPwd"
                android:textColor="@color/red"
                android:layout_height="wrap_content" android:id="@+id/confirmDiscPwd"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_centerHorizontal="true"/>

        <Button
                android:id="@+id/btn_Pwd"
                android:layout_below="@id/confirmDiscPwd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textAllCaps="false"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"
                android:background="@drawable/roundbtn"
                android:text="Proceed" android:layout_centerHorizontal="true"/>
        <ProgressBar
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_below="@id/confirmPwdTxtLayoutPwd"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarPwd"/>
        <TextView
                android:text="Password requirements"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/btn_Pwd"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note_tt"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/pass_check"/>
        <TextView
                android:text="1. It should contain at least 8 characters and at most 20 characters."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/strength_note_tt"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note1"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="2. It should contain at least one digit."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/strength_note1"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note2"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="3. It should contain at least one upper case and one lower case letter."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/strength_note2"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note3"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="4. It should contain at least one special character(e.g !@#$%*()-+=^)."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/strength_note3"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note4"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="5. It should not contain any space in between the characters."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/strength_note4"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/strength_note5"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp" android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>
</ScrollView>