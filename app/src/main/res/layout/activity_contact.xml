<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:layout_marginRight="0dp"
            android:paddingRight="0dp" android:layout_centerVertical="false" android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp" android:layout_marginEnd="0dp">
        <TextView
                android:text="How can we help you?"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/titleTextColor"
                android:layout_height="wrap_content" android:id="@+id/contactLbl"
                android:layout_centerHorizontal="false"
                android:layout_alignParentTop="true" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" android:layout_marginBottom="10dp" android:layout_marginTop="5dp"/>
        <TextView
                android:text="Reach out to us anytime you need help or have a feedback and our team will assist."
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/contactLbl"
                android:textColor="?attr/subtitleTextColor"
                android:layout_height="wrap_content"
                android:id="@+id/contactLbl2"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" android:layout_marginBottom="45dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contactRV"
                android:layout_below="@+id/contactLbl2"
                android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_marginTop="0dp"
                android:layout_marginRight="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="0dp"/>
    </RelativeLayout>

    </RelativeLayout>