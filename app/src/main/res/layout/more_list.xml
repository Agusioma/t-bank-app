<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/bg1"

                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/more_card_list"
            app:cardBackgroundColor="@color/bg1"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp" android:layout_marginEnd="20dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_height="wrap_content" android:background="@color/bg1">
            <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_baseline_security_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imageView1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terrence Agusioma"
                    android:id="@+id/text_prof"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="terryterrence200@gmail.com"
                    android:id="@+id/text_prof1"
                    android:layout_below="@+id/text_prof"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+254702277060"
                    android:id="@+id/text_prof2"
                    android:layout_below="@+id/text_prof1"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"/>
            <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_baseline_navigate_next_24"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/text_prof1"
                    android:layout_height="wrap_content" android:id="@+id/imageView2"
                    android:layout_alignParentRight="true" android:layout_marginStart="50dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>