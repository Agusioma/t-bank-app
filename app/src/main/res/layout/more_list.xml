<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg1">
        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content" android:background="@color/bg1">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_img_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imageView1"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terrence Agusioma"
                    android:id="@+id/text_prof"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="terryterrence200@gmail.com"
                    android:id="@+id/text_prof1"
                    android:layout_below="@+id/text_prof"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"/>
            <View
                    android:id="@+id/divider77"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/text_prof1"
                    android:layout_toRightOf="@+id/imageView1"
                    android:background="@color/our_grey"
            />
        </RelativeLayout>
</RelativeLayout>